<div class="navbar navbar-inverse navbar-static-top nav-menus">
    <div class="container-fluid">
        <div class="navbar-header">
            <button class="navbar-toggle collapsed" type="button" data-toggle="collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <%= image_tag("online-learning.svg", class:"icon-logo")%>
            <%= link_to 'Store Stickers', root_url, class:'navbar-brand' %>
        </div>

        <div class="collapse navbar-collapse" id="expanded-menu">
            <ul class="nav navbar-nav">
            <% if !user_signed_in? %>
                <li class="active">
                    <%= link_to 'Nova Conta', new_user_path, class:'btn-new' %>
                </li>
            <% end %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <% if !user_signed_in? %>
                    <li>
                        <%= link_to 'Entrar', entrar_path %>
                    </li>
                <% elsif user_signed_in? %>
                    <li class="dropdown">
                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Bem vindo, <%= current_user.name %> <span class="caret"></span>
                        </a>

                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <li>
                                <%= link_to 'Meus Contatos', contacts_path, class:'dropdown-item' %>
                            </li>
                            <!--<li>
                                <%#= link_to 'Meus Produtos', contacts_path, class:'dropdown-item' %>
                            </li>-->
                            <li>
                                <%= link_to 'Editar', edit_user_path(current_user) , class:'dropdown-item' %>
                            </li>
                            <li class="divider" role="separator"></li>
                            <li>
                                <%= link_to 'Sair', sair_path , method: :delete , class:'dropdown-item'%>
                            </li>
                        </ul>
                    </li>
                <% end %>
            </ul>
        </div>
    </div>
